/* Pages/orderList/orderList.wxss */
page{
    background-color: #F8F8F8;
}
.list{
    padding: 20rpx 30rpx;
}
.Item{
    background-color: #fff;
    padding: 28rpx 22rpx;
    box-shadow:0px 0px 30rpx 0px rgba(158,167,182,0.12);
    border-radius:10rpx;
    margin-bottom: 20rpx;
}
.itemTop{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.itemTop label:nth-of-type(1){
    font-size:26rpx;
    color:rgba(158,167,182,1);
}
.itemTop label:nth-of-type(2){
    font-size:26rpx;
    font-weight:bold;
    color:rgba(254,66,66,1);
}
.itemCenter{
    display: flex;
    margin-top: 28rpx;
}
.itemCenter image{
    width: 300rpx;
    height: 170rpx;
    margin-right: 22rpx;
}
.itemCenter view{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.name{
    font-size:32rpx;
    font-weight:bold;
    color:rgba(32,32,32,1);
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.price{
    font-size:28rpx;
    color:rgba(32,32,32,1);
}
.itemBottom{
    margin-top: 40rpx;
    display: flex;
    justify-content: flex-end;
}
.itemBottom label{
    padding: 10rpx 32rpx;
    font-size:30rpx;
    color:rgba(32,32,32,1);
    border:2rpx solid rgba(190,190,192,1);
    border-radius:70rpx;
    margin-left: 20rpx;
}