/* Pages/orderDetail/orderDetail.wxss */
page{
    background-color: #F8F8F8;
}
.bigImg{
    width: 100%;
    height: 562rpx;
}
.card{
    padding: 30rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
}
.title{
    font-size:32rpx;
    font-weight:bold;
    color:rgba(32,32,32,1);
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.card view{
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
}
.card view label{
    font-size:26rpx;
    color:rgba(32,32,32,1);
}
.info view label:nth-last-of-type(1){
    font-weight:bold;
}
.btn{
    margin: 40rpx 95rpx 34rpx;
}
.btn button{
    background-color: #979D79;
    border:2rpx solid rgba(151,157,121,1);
    box-shadow:0px 6rpx 7rpx 0px rgba(136,146,131,0.46);
    border-radius:10rpx;
    font-size:34rpx;
    font-weight:bold;
    color:rgba(255,255,255,1);
}