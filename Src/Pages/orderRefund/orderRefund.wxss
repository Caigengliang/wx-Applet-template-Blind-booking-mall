/* Pages/orderRefund/orderRefund.wxss */
page{
    background-color: #F8F8F8;
}
.bigImg{
    width: 100%;
    height: 562rpx;
}
.card,.info{
    padding: 30rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
}
.title{
    font-size:32rpx;
    font-weight:bold;
    color:rgba(32,32,32,1);
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.card view{
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
}
.card view label{
    font-size:26rpx;
    color:rgba(32,32,32,1);
}
.info .van-cell{
    padding: 0;
}
.info .van-cell__title{
    font-size:30rpx;
    color:rgba(32,32,32,1);
}
.tip{
    font-size:28rpx;
    color:rgba(157,167,181,1);
}
.info textarea{
    border:2rpx solid rgba(158,167,182,0.3);
    padding: 26rpx 20rpx;
    width: auto;
    height: 140rpx;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
}
.btn{
    padding: 45rpx 94rpx;
}
.btn .van-button--info{
    width: 560rpx;
    background:rgba(151,157,121,1);
    border:2rpx solid rgba(151,157,121,1);
    box-shadow:0px 6rpx 7rpx 0px rgba(136,146,131,0.46);
    border-radius:10rpx;
    color: #fff;
    font-size:34rpx;
    font-weight:bold;
}