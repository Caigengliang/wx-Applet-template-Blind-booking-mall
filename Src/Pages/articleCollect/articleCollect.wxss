/* Pages/articleCollect/articleCollect.wxss */
.list {
  padding: 30rpx;
}
.item {
  margin-bottom: 30rpx;
  display: flex;
}
.img {
  width: 300rpx;
  height: 170rpx;
  margin-right: 22rpx;
}
.item view {
  width: 53%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: space-between;
}
.name {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(32, 32, 32, 1);
  overflow: hidden;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 300rpx;
  /* display: -webkit-box; */
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.tip {
  width: 30%;
  padding: 0 10rpx;
  height: 36rpx;
  background-color: #ff5755;
  font-size: 24rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 1);
  border-top-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
