/* Pages/Login/Login.wxss */
page{
    background-color: #F8F8F8;
}
.all{
    padding: 30rpx;
}
.top{
    background-color: #fff;
    padding: 60rpx 32rpx;
    box-shadow:0px 0px 30rpx 0px rgba(157,167,181,0.12);
    border-radius:20rpx;
}
.topDiv{
    border-bottom: 2rpx solid rgba(157,167,181,0.1);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 20rpx;
    padding-bottom: 60rpx;
}
.topDiv image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}
.topDiv label{
    font-size:30rpx;
    font-weight:bold;
    color:rgba(31,31,31,1);
}
.center{
    padding: 40rpx 0;
    display: flex;
    flex-direction: column;
}
.center label:nth-of-type(1){
    font-size:34rpx;
    font-weight:bold;
    color:rgba(31,31,31,1);
    margin-bottom: 20rpx;
}
.center label:nth-of-type(2){
    font-size:26rpx;
    font-weight:500;
    color:rgba(178,185,196,1);
}
.btn{
    padding: 32rpx 30rpx 0;
    display: flex;
    justify-content: space-between;
}
.btn .van-button{
    width: 260rpx;
    border-radius: 70rpx;
    font-size:34rpx;
    font-weight:bold;
}
.btn .van-button--primary{
    border:2rpx solid rgba(157,167,181,1);
}
.btn .van-button--plain .van-button__text{
    color:rgba(157,167,181,1);
}
.btn .van-button--info{
    background-color:rgba(151,157,121,1);
    border:2rpx solid rgba(151,157,121,1);
}