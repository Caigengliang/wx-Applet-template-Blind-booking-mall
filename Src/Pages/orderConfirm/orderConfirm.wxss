/* Pages/orderConfirm/orderConfirm.wxss */
page {
  background-color: #f8f8f8;
  padding-bottom: 150rpx;
}
.bigImg {
  width: 100%;
  height: 562rpx;
}
.card,
.info {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.title {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(32, 32, 32, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.card view {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.card view label {
  font-size: 26rpx;
  color: rgba(32, 32, 32, 1);
}
.card view label:nth-last-of-type(1) {
  font-weight: bold;
}
.txtin {
  border: 2rpx solid rgba(158, 167, 182, 0.3);
  padding: 26rpx 20rpx;
  font-size: 30rpx;
  margin: 28rpx;
}
.chooseDiv {
  position: relative;
}
.rightIcon {
  position: absolute;
  width: 15rpx;
  height: 26rpx;
  right: 60rpx;
  top: 38rpx;
}
.radioDiv {
  display: flex;
  align-items: center;
}
.radioDiv image {
  width: 60rpx;
  height: 48rpx;
  margin-right: 22rpx;
}
.radioDiv label {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(32, 32, 32, 1);
}
.payType {
  display: flex;
  align-items: center;
  padding: 0 28rpx;
}
.btn {
  width: 100%;
  padding: 20rpx 30rpx 20rpx 40rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  z-index: 9999;
  justify-content: space-between;
}
.btn cover-view {
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  color: rgba(74, 63, 13, 1);
  /* padding-right: 60rpx; */
}
.button {
  margin-right: 66rpx;
  width: 300rpx;
  height: 80rpx;
  background-color: rgba(151, 157, 121, 1);
  border-radius: 10rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #fff !important;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 80rpx;
}
