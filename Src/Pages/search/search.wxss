}

.search-sub {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 594rpx;
  height: 66rpx;
  border-radius: 33rpx;
  background-color: #f4f4f4;
}

.phClass {
  background-color: #f4f4f4;
  padding-left: 8rpx;
  height: 66rpx;
  line-height: 66rpx;
  width: 82%;
  text-align: left;
  font-size: 28rpx;
  font-weight: 500;
  color: #aab2bf;
  font-family: PingFang SC;
}
.searchInput {
  background-color: #f4f4f4;
  padding-left: 8rpx;
  height: 66rpx;
  line-height: 66rpx;
  width: 82%;
  text-align: left;
  font-size: 28rpx;
  font-weight: 500;
  color: #202020;
  font-family: PingFang SC;
}

.searchBtn {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.wxSearchInner {
  padding-left: 10rpx;
}

.clearkey-view {
  width: 28rpx;
  height: 28rpx;
  margin-top: 15rpx;
  float: right;
  margin-bottom: auto;
}
.show-clear {
  /* display: block; */
  /* width: 64rpx; */
  margin: 0 0 0 31rpx;
  height: 32rpx;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(32, 32, 32, 1);
  line-height: 40rpx;
}

.hide-clear {
  display: none;
}

.history {
  margin: 61rpx 0 0 0;
  width: 690rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.title {
  height: 31rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(32, 32, 32, 1);
  line-height: 40rpx;
}
.delete {
  width: 35rpx;
  height: 36rpx;
}
.history-content {
  display: flex;
  flex-direction: column;
  margin-top: 31rpx;
}
.history-item {
  /* flex: 1; */
  /* width: 194rpx; */
  box-sizing: content-box;
  height: 60rpx;
  background: rgba(157, 167, 181, 0.1);
  border-radius: 30rpx;
  text-align: center;
  margin-left: 20rpx;
  margin-top: 31rpx;
}
.flex-box {
  display: flex;
  flex-direction: row;
  width: 690rpx;
  flex-wrap: wrap;
}

.history-item > view {
  /* min-width: 134rpx; */
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 26rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(32, 32, 32, 1);
  line-height: 60rpx;
}

.shop-list {
  display: flex;
  /* height: 100%; */
  /* height: 100%; */
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin: 0rpx 0 0 0;
  /* height: 750rpx; */
  padding-top: 60rpx;
  height: calc(100vh - 120rpx);
}
.shop-list :nth-child(1) {
  margin: 0;
}
