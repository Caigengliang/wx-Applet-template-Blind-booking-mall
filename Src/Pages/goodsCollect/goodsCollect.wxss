/* Pages/goodsCollect/goodsCollect.wxss */
.list{
    padding: 30rpx;
}
.item{
    margin-bottom: 30rpx;
    display: flex;
}
.img{
    width: 300rpx;
    height: 170rpx;
    margin-right: 22rpx;
}
.item view{
    width: 53%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-content: space-between;
}
.name{
    font-size:32rpx;
    font-weight:bold;
    color:rgba(32,32,32,1);
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.price{
    font-size:30rpx;
    font-weight:bold;
    color:rgba(253,65,65,1);
}