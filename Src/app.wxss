/**app.wxss**/

page {
  height: auto;
  font-family: -apple-system, Roboto, "PingFangSC", "Noto Sans CJK SC",
    "Source Han Sans SC", "Source Han Sans CN";
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
}
.noData {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  height: 200rpx;
  color: #9ea7b6;
  font-size: 36rpx;
}
/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
